<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - ABComestic </title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <link href='//fonts.googleapis.com/css?family=Roboto Slab' rel='stylesheet'>
    <style>
        .mside {
            clear: both;
            text-align: center;
        }

        .hgroup {
            padding: 20px 0;
            text-transform: uppercase;
        }

            .hgroup h1 {
                letter-spacing: 1px;
                font-weight: bold;
                font-size: 28px;
                line-height: 34px;
            }

            .hgroup h2 {
                letter-spacing: 2px;
                font-size: 15px;
                line-height: 20px;
            }

        .page-header {
            margin: 0;
        }

        body {
            font-family: 'Roboto Slab';
        }

        html > body .caption > h4 > strong {
            float: left;
            font-size: 18px;
            color: #c10017;
            margin: 0 9px 5px;
        }
    </style>
</head>
<body>
<div class="navbar navbar-inverse navbar-fixed-top">
    <div class="container">
        <div class="navbar-header">
            <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </button>
            @Html.ActionLink("ABComestic", "Index", "Store", new {area = ""}, new {@class = "navbar-brand"})
        </div>
        <div class="navbar-collapse collapse">
            <ul class="nav navbar-nav">
                <li>@Html.ActionLink("Management", "Index", "Manager")</li>
            </ul>
            <ul class="nav navbar-nav navbar-right">
                @if (Session["UserName"] != null)
                {
                    <li>
                        @Html.ActionLink(Session["UserName"].ToString(), "Userdashboard", "Account")
                    </li>
                    <li>
                        @Html.ActionLink("Log Out", "LogOut", "Account")
                    </li>
                }
            </ul>
        </div>
    </div>
</div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>Copyright &copy; @DateTime.Now.Year - ABComestic Ltd</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    <link href="@Url.Content("../../Content/product-details.css")" rel="stylesheet" type="text/css" />
    @RenderSection("scripts", required: false)
</body>
</html>
